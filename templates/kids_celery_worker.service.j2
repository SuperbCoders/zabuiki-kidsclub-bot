[Unit]
Description=Celery Beat Service
After=network.target

[Service]
Type=simple
User=manager
EnvironmentFile={{ bot_env }}
User=manager
WorkingDirectory={{ manage_py_dir }}
ExecStart=/bin/sh -c '/home/manager/.local/bin/celery worker  \
  -A kidsclub --pidfile=/var/run/celery/kidsclub_worker.pid \
  --logfile=/var/log/celery/kidsclub_worker.log --loglevel=DEBUG'

[Install]
WantedBy=multi-user.target